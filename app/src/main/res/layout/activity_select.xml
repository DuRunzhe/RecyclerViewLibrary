<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ldzs.recyclerlibrary.PullToRefreshRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        auto:pv_divideHorizontalPadding="@dimen/activity_margin"
        auto:pv_divideVerticalPadding="@dimen/activity_margin"
        auto:pv_listDivideHeight="0.4dp"
        auto:pv_refreshMode="none"
        auto:pv_choiceBackground="@color/blue"/>

    <com.ldzs.pulltorefreshrecyclerview.widget.RadioLayout
        android:id="@+id/rl_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|bottom"
        auto:rl_items="@array/choice" />
</FrameLayout>