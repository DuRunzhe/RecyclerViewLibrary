<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <com.ldzs.recyclerlibrary.PullToRefreshRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        auto:pv_refreshMode="none"
        auto:pv_listDivide="@color/divide"
        auto:pv_listDivideHeight="1dp"
        auto:pv_divideHorizontalPadding="@dimen/activity_horizontal_margin"
        auto:pv_divideVerticalPadding="@dimen/activity_vertical_margin"/>

</RelativeLayout>
