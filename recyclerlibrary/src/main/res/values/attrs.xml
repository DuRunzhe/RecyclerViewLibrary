<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PullToRefreshRecyclerView">
        <attr name="pv_listDivide" format="reference" />
        <attr name="pv_listDivideHeight" format="dimension" />
        <attr name="pv_divideHorizontalPadding" format="dimension" />
        <attr name="pv_divideVerticalPadding" format="dimension" />
        <attr name="pv_choiceMode" format="enum">
            <enum name="click" value="0x00" />
            <enum name="single_choice" value="0x01" />
            <enum name="multi_choice" value="0x02" />
            <enum name="rectangle_choice" value="0x03" />
        </attr>
        <attr name="pv_choiceMaxCount" format="integer"/>
        <attr name="pv_choiceBackground" format="reference" />
        <attr name="pv_adapterView" format="enum">
            <enum name="header" value="0x00"/>
            <enum name="footer" value="0x01"/>
        </attr>
    </declare-styleable>

    <attr name="refresh_footerHeight" format="dimension"/>
    <attr name="refresh_clickTextHint" format="string"/>
    <attr name="refresh_textSize" format="dimension"/>
    <attr name="refresh_textColor" format="color"/>
    <attr name="refresh_errorHint" format="reference"/>
    <attr name="refresh_retryItemSelector" format="reference"/>
    <attr name="refresh_retry" format="string"/>



</resources>